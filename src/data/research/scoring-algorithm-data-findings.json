{
  "scoring_methodology": {
    "approach": "Weighted MCDA with fuzzy logic scoring",
    "details": "Weighted sum of category scores (0-100 each), with fuzzy thresholding on metrics; penalties subtract points for violations; bonuses add points for exceeding standards. Overall score capped at 100."
  },
  "scoring_weights": {
    "safety": 0.40,
    "workflow": 0.25,
    "space_utilization": 0.20,
    "accessibility_ergonomics": 0.15
  },
  "scoring_categories": {
    "safety": {
      "metrics": [
        {
          "name": "machine_clearance",
          "description": "Clearance around machines (inches)",
          "threshold_optimal": 36,
          "threshold_minimum": 28,
          "units": "inches",
          "score_function": {
            "type": "linear_fuzzy",
            "mapping": [
              {"value": 28, "score": 0},
              {"value": 36, "score": 100}
            ]
          }
        },
        {
          "name": "aisle_width",
          "description": "Width of main aisles (inches)",
          "threshold_recommended": 48,
          "threshold_minimum": 28,
          "units": "inches",
          "score_function": {
            "type": "piecewise_linear",
            "mapping": [
              {"value": 28, "score": 0},
              {"value": 36, "score": 50},
              {"value": 48, "score": 100}
            ]
          }
        },
        {
          "name": "lighting_level",
          "description": "Illumination at work surface (foot-candles)",
          "threshold_minimum": 10,
          "threshold_target": 60,
          "threshold_optimal": 100,
          "units": "foot_candle",
          "score_function": {
            "type": "fuzzy_triangular",
            "mapping": [
              {"value": 10, "score": 0},
              {"value": 60, "score": 90},
              {"value": 100, "score": 100}
            ]
          }
        },
        {
          "name": "dust_extraction",
          "description": "Dust collection coverage (%)",
          "threshold_required": 100,
          "units": "percent",
          "score_function": {
            "type": "linear",
            "formula": "score = coverage_percent",
            "max_score": 100
          }
        },
        {
          "name": "ambient_noise",
          "description": "Average ambient sound level (dBA)",
          "threshold_safe": 85,
          "units": "dBA",
          "score_function": {
            "type": "inverse_linear",
            "mapping": [
              {"value": 85, "score": 50},
              {"value": 70, "score": 100}
            ],
            "note": "Higher noise => lower score; 70 dBA or less is full score, 85 dBA is 50, above 100 dBA could be 0."
          }
        },
        {
          "name": "exit_access",
          "description": "Compliance of exit pathways",
          "criteria": "All exit routes â‰¥28in wide & unobstructed",
          "score_function": {
            "type": "binary",
            "full_score_if": true,
            "score_full": 100,
            "score_fail": 0
          }
        }
      ]
    },
    "workflow": {
      "metrics": [
        {
          "name": "material_travel_distance",
          "description": "Total material flow distance (normalized)",
          "units": "relative",
          "score_function": {
            "type": "relative_to_best",
            "formula": "score = 100 * (best_distance / this_distance)"
          }
        },
        {
          "name": "adjacency_score",
          "description": "Adjacency closeness rating (Muther scale)",
          "score_function": {
            "type": "linear",
            "formula": "score = (achieved_adj_points / max_adj_points) * 100"
          }
        },
        {
          "name": "flow_continuity",
          "description": "Flow pattern continuity (penalties for backtracking)",
          "score_function": {
            "type": "penalized_max",
            "formula": "score = 100 - backtrack_penalty",
            "note": "penalty calculated based on number and length of backtracking paths"
          }
        }
      ]
    },
    "space_utilization": {
      "metrics": [
        {
          "name": "floor_space_used",
          "description": "Percentage of floor area utilized",
          "units": "percent",
          "score_function": {
            "type": "peak_curve",
            "optimal_value": 70,
            "tolerance": 20,
            "formula": "score = 100 - k * (usage - optimal)^2"
          }
        },
        {
          "name": "storage_density",
          "description": "Tools or materials stored per sq. ft.",
          "units": "count_per_sqft",
          "score_function": {
            "type": "piecewise_linear",
            "mapping": [
              {"value": 0.2, "score": 50},
              {"value": 0.5, "score": 100},
              {"value": 1.0, "score": 70}
            ]
          }
        },
        {
          "name": "layout_flexibility",
          "description": "Presence of open/flexible space",
          "score_function": {
            "type": "qualitative",
            "criteria": {
              "has_modular_space": 50,
              "room_for_expansion": 50
            },
            "max_score": 100
          }
        }
      ]
    },
    "accessibility_ergonomics": {
      "metrics": [
        {
          "name": "workbench_height",
          "description": "Average workbench/tool height (inches)",
          "optimal_range": [34, 38],
          "units": "inches",
          "score_function": {
            "type": "range_decay",
            "optimal_range": [34, 38],
            "tolerance": 4,
            "formula": "score = max(0, 100 - |height - 36|*10)"
          }
        },
        {
          "name": "heavy_item_storage_height",
          "description": "Storage height for heavy items (inches from floor)",
          "optimal_range": [18, 50],
          "units": "inches",
          "score_function": {
            "type": "range",
            "score_full_if": "within_range",
            "score_full": 100,
            "score_else": 0
          }
        },
        {
          "name": "tool_reachability",
          "description": "Fraction of frequent tools within arm reach",
          "units": "percent",
          "score_function": {
            "type": "linear",
            "formula": "score = percent_reachable"
          }
        },
        {
          "name": "anti_fatigue_measures",
          "description": "Ergonomic aids (mats, lift devices, etc.)",
          "score_function": {
            "type": "additive",
            "criteria": {
              "anti_fatigue_mats": 5,
              "adjustable_benches": 5,
              "lift_assists": 5
            },
            "max_score": 15
          }
        }
      ]
    }
  },
  "penalty_systems": [
    {
      "name": "clearance_violation",
      "description": "Clearance below 28in (legal minimum) in any walkway or around equipment",
      "severity": "severe",
      "formula": "if clearance_deficit > 0: penalty_points = 10 * 2^(clearance_deficit_inches)",
      "applied_to": "safety"
    },
    {
      "name": "dust_collection_absent",
      "description": "Dust-producing machine without proper exhaust per NFPA 664",
      "severity": "severe",
      "formula": "penalty_points = -30 * count_non_extracted_machines",
      "applied_to": "safety"
    },
    {
      "name": "exit_blocked",
      "description": "Exit route blocked or <28in width",
      "severity": "severe",
      "formula": "penalty_points = -50 (or disqualify layout)",
      "applied_to": "safety"
    },
    {
      "name": "insufficient_lighting",
      "description": "General lighting below 10 fc OSHA minimum",
      "severity": "moderate",
      "formula": "penalty_points = -2 * (10 - actual_fc) for actual_fc < 10",
      "applied_to": "safety"
    },
    {
      "name": "high_noise_unmitigated",
      "description": "Noise above 85 dB without mitigation",
      "severity": "moderate",
      "formula": "penalty_points = -10 if avg_dB > 85, -30 if >100",
      "applied_to": "safety"
    },
    {
      "name": "ergonomic_hazard",
      "description": "Frequent task violates ergonomic guidelines (e.g. heavy lift from floor)",
      "severity": "minor",
      "formula": "penalty_points = -5 * count_ergonomic_issues",
      "applied_to": "accessibility_ergonomics"
    }
  ],
  "bonus_systems": [
    {
      "name": "exceptional_dust_control",
      "description": "Dust control exceeds standards (HEPA filtration, >99% capture)",
      "value": 10,
      "criteria": "HEPA_filtered_system == true && all_tools_collected == true"
    },
    {
      "name": "high_quality_lighting",
      "description": "Task lighting provides >100 fc with high CRI (near-daylight)",
      "value": 5,
      "criteria": "avg_task_fc >= 100 && CRI >= 90"
    },
    {
      "name": "modular_layout",
      "description": "Use of mobile/modular stations allowing easy reconfiguration",
      "value": 5,
      "criteria": ">= 50% major tools on mobile bases OR layout reconfigurable"
    },
    {
      "name": "5S_organization",
      "description": "Excellent workshop organization (5S) and visual management",
      "value": 5,
      "criteria": "organization_audit_score >= 90%"
    },
    {
      "name": "noise_reduction_design",
      "description": "Extra noise dampening (enclosures, acoustic panels) keeping noise <75 dB",
      "value": 5,
      "criteria": "avg_noise_db < 75"
    },
    {
      "name": "ergonomic_enhancements",
      "description": "Ergonomic aids: mats, adjustable benches, lift devices, etc.",
      "value": 5,
      "criteria": "anti_fatigue_mats == true && adjustable_heights == true"
    }
  ]
}